<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.rutracker" name="RuTracker" version="0.20.4mod22" provider-name="HAL9000">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.delugestream" version="0.1.1" optional="true"/>
    <import addon="script.module.torrent.ts" optional="true" />
    <import addon="script.module.libtorrent" optional="true" />
    <import addon="script.service.torrserver" optional="true" />
    <import addon="script.module.torrserver" optional="true" />
    <import addon="plugin.video.elementum" optional="true" />
    <import addon="plugin.video.torrenter" optional="true" />
    <import addon="plugin.video.tam" optional="true" />
  </requires>
  <extension point="xbmc.python.pluginsource" provides="video" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">RuTracker</summary>
    <description lang="en">You can search RuTracker and download torrents.</description>
    <summary lang="ru">Навигатор по RuTracker</summary>
    <description lang="ru">Навигатор по сайту RuTracker с возможностью скачивания торрентов. Просмотр через Elementum, TorrServer, Torrenter, TAM, Libtorrent, TorrentStream, DelugeStream. Скачивание торрентов с помощью Transmission и uTorrent.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.virserg" name="Virserg Repository" version="1.0.0" provider-name="Virserg">
    <extension point="xbmc.addon.repository" name="Virserg Repository">
        <info compressed="false">https://raw.githubusercontent.com/virserg/kodirepo/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/virserg/kodirepo/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/virserg/kodirepo/master/zips</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Install Addons</summary>
        <description lang="en">Download and install addons</description>
        <summary lang="ru">Репозиторий</summary>
        <description lang="ru">Скачивание и установка плагинов</description>
        <platform>all</platform>
    </extension>
</addon>

</addons>
